<!-- Notice message with Bootstrap alert -->
<% if notice.present? %>
  <div class="alert alert-success">
    <%= notice %>
  </div>
<% end %>

<!-- Page Title -->
<% content_for :title, "Projects" %>

<div class="container mt-5">
  <!-- Page Title -->
  <h1 class="display-6 mb-4 text-center font-weight-bold text-success">PROJECTS</h1>

  <!-- Projects List -->
   <div id="projects" class="row">
    <% @projects.each do |project| %>
      <div class="col-md-6 mb-4">
        <div class="card h-150 shadow-sm">
          <div class="card-body">
            <!-- Project Render -->
            <%= render project %>

            <!-- Link to show the project -->
            <p>
              <%= link_to "Show this project", project, class: "btn btn-primary btn-sm mt-3" %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Link to create a new project -->
  <div class="mt-4 text-center">
    <%= link_to "New project", new_project_path, class: "btn btn-success" %>
    <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete }, class: "btn btn-danger" %>
  </div>
</div>

